<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Grupo de admins -->
        <record id="administration_group" model="res.groups">
            <field name="name">Administrators</field>
            <field name="comment">Administrators Group:
                                   * Permission to edit in products:
                                      - Name
                                      - Category
                                      - Type
                                      - Company
                                      - Internal Notes
                                      - Sale ok
                                      - Purchase ok
                                      - Barcode
                                      - Default code
            </field>
        </record>
        <!-- Fin Grupo de admins -->
        <!-- Margen  -->
         <record id="show_margins" model="res.groups">
            <field name="name">Show Margins</field>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
            <field name="comment">Permission to view margins</field>
        </record>
        <!-- Fin Margen -->
        <!-- Coste -->
        <record id="show_cost_price" model="res.groups">
            <field name="name">Show cost price</field>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
            <field name="comment">Permission to view costs</field>
        </record>
        <!-- Fin Coste -->
        <!-- Pvp -->
        <record id="edit_sale_price" model="res.groups">
            <field name="name">Edit sale price</field>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
            <field name="comment">Permission to edit sale price</field>
        </record>
        <!-- Fin Pvp -->
        <!-- Editar impuesto-->
        <record id="edit_tax" model="res.groups">
            <field name="name">Edit tax</field>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
            <field name="comment">Permission to edit taxes</field>
        </record>
        <!-- Fin editar impuesto-->
        <!-- Editar descuento-->
        <record id="edit_discounts" model="res.groups">
            <field name="name">Edit discounts</field>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
            <field name="comment">Permission to edit discounts</field>
        </record>
        <!-- Fin editar descuento-->
        <!-- Editar cuenta en factura-->
        <record id="edit_account" model="res.groups">
            <field name="name">Edit accounts invoice</field>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
            <field name="comment">Permission to edit account in invoice</field>
        </record>
        <!-- Fin editar cuenta en factura-->
        <!-- Editar cantidad en factura-->
        <record id="edit_quantity" model="res.groups">
            <field name="name">Edit quantity invoice</field>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
            <field name="comment">Permission to edit quantity in invoice</field>
        </record>
        <!-- Fin editar cantidad en factura-->
        <!-- Editar descripcion de producto en factura-->
        <record id="edit_product_desc" model="res.groups">
            <field name="name">Edit product description in invoice</field>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
            <field name="comment">Permission to edit product description in invoice</field>
        </record>
        <!-- Fin editar descripcion de producto en factura-->
        <!-- Editar producto en factura-->
        <record id="edit_product_id" model="res.groups">
            <field name="name">Edit product in invoice</field>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
            <field name="comment">Permission to edit product in invoice</field>
        </record>
        <!-- Fin editar producto en factura-->
        <!-- Cancelar en factura-->
        <record id="cancel_invoice" model="res.groups">
            <field name="name">Cancel invoice</field>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
            <field name="comment">Permission to cancel invoices</field>
        </record>
        <!-- Fin cancelar factura-->
        <!--  Purchase Page  -->
        <record id="show_purchase_page" model="res.groups">
            <field name="name">Show Purcahse Page</field>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
            <field name="comment">Permission to view purchase page</field>
        </record>
        <!--  Fin Purchase Page  -->
        <!--  Inventory Page  -->
        <record id="show_inventory_page" model="res.groups">
            <field name="name">Show Inventory Page</field>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
            <field name="comment">Permission to view inventory page</field>
        </record>
        <!--  Fin Inventory Page  -->
        <!--  Accounting Page  -->
        <record id="show_accounting_page" model="res.groups">
            <field name="name">Show Accounting Page</field>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
            <field name="comment">Permission to view accounting page</field>
        </record>
        <!--  Fin Accounting Page  -->
        <!--  Sale Page  -->
        <record id="show_sale_page" model="res.groups">
            <field name="name">Show Sale Page</field>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
            <field name="comment">Permission to view sale page</field>
        </record>
        <!--  Fin Sale Page  -->
    </data>
</odoo>



