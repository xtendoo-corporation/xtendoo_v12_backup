<odoo>

     <record model="ir.ui.view" id="sale_order_pp_discount_form_view">
            <field name="name">sale.order.pp.discount</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

             <xpath expr="//field[@name='amount_tax']" position="after">

                 <field name="client_discount"/>

                  <field name="discount_dpp"/>

             </xpath>

            </field>
        </record>


</odoo>